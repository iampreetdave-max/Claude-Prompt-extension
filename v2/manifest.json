{
  "manifest_version": 3,
  "name": "Claude Prompt Optimizer",
  "version": "2.0.0",
  "description": "Optimize prompts for Claude using AI - with templates, history, and more",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["src/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "options_page": "src/options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open Claude Prompt Optimizer"
    },
    "optimize_prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+Enter",
        "mac": "Command+Shift+Enter"
      },
      "description": "Optimize current prompt"
    },
    "toggle_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle side panel"
    }
  }
}
